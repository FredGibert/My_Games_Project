<div id="game-card-container" class="container">

  <nav class="game">

    <div class="cards-game">
      <% if user_games.blank? %>
        <p class="text-center">sorry, you have no game</p>
      <% end %>
      <% user_games.each do |user_game| %>
      <div class="game-wrapper">
        <label for="event_game_id_<%= user_game.game_id %>">
          <div class="card-game">
          <%= image_tag user_game.game.photo, height: 150, width: 200, crop: :fill%>
          <div class="card-game-body">
            <h3><%= user_game.game.name %></h3>
          </div>
        </div>
        </label>
        <input type="radio" name="event[game_id]" id="event_game_id_<%= user_game.game_id %>" class="d-non">
      </div>
      <% end %>
    </div>


  </nav>
</div>
