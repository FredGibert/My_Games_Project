<!-- Card color -->
<% color = ["#ec6b9e", "#6fb5d9", "#9683fe"] %>
<% counter = 0 %>

<div id="game-card-container" class="container">

  <nav class="game">

    <div class="cards-game">
      <% if user_games.blank? %>
        <p class="text-center">Sorry, you have no game</p>
      <% end %>
      <% user_games.each do |user_game| %>
      <div class="game-wrapper">
        <input type="radio" name="event[game_id]" value="<%= user_game.game_id %>" id="event_game_id_<%= user_game.game_id %>" class="d-none">
        <label for="event_game_id_<%= user_game.game_id %>" class="mb-0">
          <div class="card-game card-game-hover" style="background-color:<%= color[counter] %>">
          <%= image_tag user_game.game.photo, height: 150, width: 230, crop: :fill, :class => "card-game-image"%>
          <div class="card-game-body">
            <h4><%= user_game.game.name %></h4>
          </div>
        </div>
        </label>
      </div>
      <% counter += 1 %>
      <% if counter >= 3 %>
        <% counter = 0 %>
      <% end %>
      <% end %>
    </div>

  </nav>
</div>
