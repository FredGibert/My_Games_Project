<div id="sidebar">
  <div class="row justify-content-end">
    <!-- work on the syle that is on the name of the user -->
    <%= link_to user_path(current_user), :class => "text-decoration-none" do %>
      <p class="my-4 sidebar-name"><%=  current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></p>
      <%= image_tag current_user.photo, :class => "avatar-sidebar", alt: "user avatar" %>
    <% end %>

  </div>

  <H3 class="mx-3">Amis</H3>
  <hr>
  <% current_user_first_3_friends.each do |friend| %>

<div class="mx-5 my-4">

  <% if  Friend.where(user1: current_user) != []%>
    <%= link_to user_path(friend.user2.id), :class => "text-decoration-none" do %>

      <% if friend.user2.photo.attached? %>
      <%= cl_image_tag friend.user2.photo.key, class: "avatar-large mr-3" %>
      <% end %>
      <%= friend.user2.first_name.capitalize %> <%= friend.user2.last_name.capitalize %>
    <% end %>

  <% else %>
    <%= link_to user_path(friend.user1.id), :class => "text-decoration-none" do %>

      <% if friend.user1.photo.attached? %>
      <%= cl_image_tag friend.user1.photo.key, class: "avatar-large mr-3 text-decoration-none" %>
      <% end %>
      <%= friend.user1.first_name.capitalize %> <%= friend.user1.last_name.capitalize %>
    <% end %>

  <% end %>

</div>
<% end %>

  <H3 class="mx-3">Événement</H3>
  <% months = ["Janv", "Fev", "Mars", "Avr", "Mai", "Juin", "Juill", "Août", "Sept", "Oct", "Nov", "Dec"] %>
  <% counter = 0 %>
  <hr>

  <div class="card-sidebar-container">
    <% pending_event_invitations.each do |participation| %>
    <div class="card-sidebar">
      <%= image_tag participation.event.game.photo, alt: participation.event.game.name, class: "card-sidebar img" %>
      <div class="card-sidebar-infos">
        <div class="d-flex">
        <h2><%= participation.event.description %></h2>
            <div class="card-sidebar-date">
              <p><%= participation.event.start_at.day %> <%= months[participation.event.start_at.month.to_i - 1] %></p>
            </div>
        </div>
              <p class="d-flex justify-content-end"><strong><%=  participation.event.start_at.hour%>h / <%=participation.event.end_at.hour %>h </strong></p>
        <a class="btn-accept" href="#">Accepter</a>
        <a class="btn-decline" href="#">Refuser</a>
      </div>
    </div>
    <% end %>

  </div>
</div>
