
<div class="container">
  <div class="log-align ">
    <h2>Connexion</h2>
    <h2> <%= link_to "Inscription", new_user_registration_path %></h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  label: "Mot de passe",
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,label: "Se rappeler", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-flat">
      <%= f.button :submit, "Valider" %>
    </div>
  <% end %>
</div>
