<body class='log-sign-wall'>
  <div class="container">
    <div class="sign-align-vertical text-white sign-login-dgrid justify-content-center">
      <div class="sign-align-center">
        <div class="row">
          <div class="col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-5">
            <h2><strong>Inscription</strong></h2>
          </div>
        </div>
      </div>

      <div class="d-flex justify-content-center">
        <div class="row">
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= f.error_notification %>
                  <%= f.input :first_name, autofocus: true, label: "Prénom", input_html: { autocomplete: "email", class: "log-box-input" } %>
          </div>
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
                  <%= f.input :last_name, autofocus: true, label: "Nom", input_html: { autocomplete: "email", class: "log-box-input" } %>
          </div>
        </div>
      </div>

      <div class="sign-align-center">
        <div class="row">
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          label: "Email",
                          input_html: { autocomplete: "email", class: "log-box-email" }%>
          </div>
        </div>
      </div>


      <div class="d-flex justify-content-center">
        <div class="row">
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "log-box-input" } %>
          </div>
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "log-box-input" } %>
          </div>
        </div>
      </div>

      <div class="sign-align-center">
        <div class="row">
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
              <%= f.input :bio, label: "Biographie", required: true, autofocus: true, input_html: { autocomplete: "email", class: "log-box-bio" } %>
          </div>
        </div>
      </div>

      <div class="sign-align-center">
        <div class="row">
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <!-- TODO : doesn't work -->
            <%= f.input :photo, as: :file, required: true, label: "Photo de profil" %>
          </div>
        </div>
      </div>

      <div class="sign-align-center">
        <div class="row">
          <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <!-- vérifier si la redirection est bonne -->
            <%= f.button :submit, class: "btn btn-flat" %>
          </div>
        </div>
      </div>
          <% end %>
      <div class="sign-align-center sign-login-margin">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</body>
