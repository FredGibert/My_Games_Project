<div class="container">
  <div class="sign-align-vertical">
    <div>
      <div class="row">
        <div class="col-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
          <h2>Inscription</h2>
        </div>
      </div>
    </div>

    <div>
      <div class="row">
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>
                <%= f.input :first_name, required: true, autofocus: true, input_html: { autocomplete: "email", class: "log-box-input" } %>
        </div>
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
                <%= f.input :last_name, required: true, autofocus: true, input_html: { autocomplete: "email", class: "log-box-input" } %>
        </div>
      </div>
    </div>

    <div>
      <div class="row">
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "log-box-input" }%>
        </div>
      </div>
    </div>


    <div>
      <div class="row">
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "log-box-input" } %>
        </div>
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "log-box-input" } %>
        </div>
      </div>
    </div>

    <div>
      <div class="row">
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
            <%= f.input :bio, palceholder: "Biographie", required: true, autofocus: true, input_html: { autocomplete: "email", class: "log-box-bio" } %>
        </div>
      </div>
    </div>

    <div>
      <div class="row">
        <div class="col-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 form-inputs">
          <%= f.button :submit, "Valider", class: "btn btn-flat" %>
        </div>
      </div>
    </div>
        <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
